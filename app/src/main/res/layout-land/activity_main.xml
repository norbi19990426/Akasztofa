<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_visszaFele"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonbackround"
            android:text="-" />

        <TextView
            android:id="@+id/text_tippelt_betu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="A"
            android:textColor="#FF0000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_elore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonbackround"
            android:text="+" />
    </LinearLayout>

        <Button
            android:id="@+id/btn_tippel"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Tippel" />

        <ImageView
            android:id="@+id/akasztofaImage"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/akasztofa00" />

        <TextView
            android:id="@+id/text_betuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.50"
            android:textSize="30sp"
            android:text="" />
</LinearLayout>
